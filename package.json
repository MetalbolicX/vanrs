{
  "name": "rescript-vanjs",
  "version": "1.0.4",
  "main": "./src/Van.res",
  "scripts": {
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w",
    "build": "bun build ./src/Main.res.mjs --outdir ./out --format esm",
    "dev": "vite",
    "test": "retest --with-dom test/**/*.res.mjs",
    "dist": "bun build ./src/Van.res --outdir ./dist --format esm --minify"
  },
  "keywords": [
    "rescript",
    "vanjs",
    "vanjs-core"
  ],
  "author": {
    "name": "José Martínez Santana"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/MetalbolicX/rescript-vanjs"
  },
  "license": "MIT",
  "dependencies": {
    "@rescript/core": "^1.6.1",
    "rescript": "^11.1.4",
    "vanjs-core": "^1.5.3"
  },
  "devDependencies": {
    "rescript-test": "^7.0.1",
    "vite": "^6.2.3"
  }
}
